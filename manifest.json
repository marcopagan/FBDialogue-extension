{
  "manifest_version": 2,
  "name": "fbDialogue",
  "description": "Once upon a time I had a real conversation on Facebook and it felt good.",
  "version": "1.0",
  "homepage_url": "https://github.com/calibro/browser-extension-boileplate",
  "icons": {
    "19": "icons/icon-19.png",
    "38": "icons/icon-38.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"],
      "css": ["style.css"]
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "icons/icon-19-off.png",
      "38": "icons/icon-38-off.png"
    },
    "browser_style": true,
    "default_title": "Start a conversation"
  },

  "permissions": ["activeTab", "tabs", "storage"]
}
